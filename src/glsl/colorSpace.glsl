vec3 SRGBToLinear( vec3 c ) {
	// return pow(c, vec3(2.2));
	return vec3(
		c.r < 0.04045 ? c.r * 0.0773993808 : pow( c.r * 0.9478672986 + 0.0521327014, 2.4 ),
		c.g < 0.04045 ? c.g * 0.0773993808 : pow( c.g * 0.9478672986 + 0.0521327014, 2.4 ),
		c.b < 0.04045 ? c.b * 0.0773993808 : pow( c.b * 0.9478672986 + 0.0521327014, 2.4 )
	);
}

vec3 LinearToSRGB( vec3 c ) {
	// return pow(c, vec3(1.0 / 2.2));
	return vec3(
		c.r < 0.0031308 ? c.r * 12.92 : 1.055 * pow( c.r, 0.41666 ) - 0.055,
		c.g < 0.0031308 ? c.g * 12.92 : 1.055 * pow( c.g, 0.41666 ) - 0.055,
		c.b < 0.0031308 ? c.b * 12.92 : 1.055 * pow( c.b, 0.41666 ) - 0.055
	);
}
